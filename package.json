{
  "name": "@itsjonq/cyan",
  "version": "0.13.0",
  "description": "Cypress-like Testing for React + JSDOM",
  "main": "dist/index.js",
  "private": false,
  "types": "dist/index.d.ts",
  "scripts": {
    "prestart": "zero prestart",
    "build": "zero build --ts && zero build --no-clean",
    "postbuild": "sh ./scripts/postbuild.sh",
    "lint": "zero lint",
    "dev": "zero test",
    "test": "zero test --coverage",
    "coverage": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "format": "zero format",
    "validate": "zero validate",
    "start": "npm run website:start",
    "website:start": "npm run start --prefix ./website",
    "website:build": "npm run build --prefix ./website",
    "release": "zero release",
    "version": "npm run build",
    "precommit": "zero pre-commit",
    "brain": "node ./brain",
    "brain:kill": "kill $(sudo lsof -t -i:3000)"
  },
  "files": [
    "docs",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "Jon Quach <hello@jonquach.com> (https://jonquach.com)",
  "keywords": [
    "cypress",
    "cy",
    "cyan",
    "JSDOM",
    "react",
    "dom",
    "testing",
    "render",
    "unit",
    "integration"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsjonq/cyan.git"
  },
  "bugs": {
    "url": "https://github.com/itsjonq/cyan/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^16 || ^15",
    "react-dom": "^16 || ^15"
  },
  "dependencies": {
    "@types/react": "16.8.15",
    "deepmerge": "3.2.0",
    "delay": "4.2.0",
    "dom-testing-library": "^3.19.4",
    "invariant": "2.2.4",
    "keycode": "^2.2.0",
    "pretty": "^2.0.0",
    "react-redux": "^7.x",
    "react-router": "^5.x",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "rimraf": "2.6.3"
  },
  "devDependencies": {
    "@itsjonq/zero": "^4.1.2",
    "@helpscout/hsds-react": "2.39.1",
    "@types/jest": "24.0.12",
    "cheerio": "^1.0.0-rc.3",
    "coveralls": "^3.0.9",
    "express": "4.17.1",
    "nyc": "13.3.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "socket.io": "^2.2.0"
  }
}
